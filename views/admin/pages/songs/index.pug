extends ../../layouts/default.pug

block main 
    h1(class="mb-4") #{titlePage}

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row
                .col-8

                .col-4.text-right
                    a(href=`/${prefixAdmin}/songs/create` class="btn btn-outline-success") + Thêm mới
            
            table(class="table table-hover table-sm")
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        //- th Ca sĩ
                        //- th Chủ đề
                        //- th Vị trí
                        th Trạng thái 
                        th Hành động
                tbody
                    each song, index in songs
                        tr
                            td #{index + 1}
                            td 
                                img(src=song.avatar alt=song.title width="80px" height="auto")
                            td #{song.title}
                            //- td Dữ liệu ca sĩ
                            //- td Dữ liệu chủ đề
                            //- td Dữ liệu vị trsí
                            td 
                                if song.status === "active"
                                    a(href="javascript:;" class="badge badge-success") Hoạt động
                                else
                                    a(href="javascript:;" class="badge badge-danger") Dừng hoạt động
                            td 
                                a(href=`/${prefixAdmin}/songs/detail/${song.id}` class="btn btn-secondary btn-sm") Chi tiết
                                a(href=`/${prefixAdmin}/songs/edit/${song.id}` class="btn btn-warning btn-sm ml-1") Sửa
                                button(class="btn btn-danger ml-1" button-delete data-id=song.id) Xóa
    