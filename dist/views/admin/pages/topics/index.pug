extends ../../layouts/default.pug

block main 
    h1(class="mb-4") #{titlePage}

    .card.mb-3 
        .card-header Danh sách 
        .card-body 
            .row
                .col-8

                .col-4.text-right
                    a(href=`/${prefixAdmin}/topics/create` class="btn btn-outline-success") + Thêm mới
            
            table(class="table table-hover table-sm")
                thead
                    tr
                        th STT
                        th Hình ảnh
                        th Tiêu đề
                        th Trạng thái 
                        th Hành động
                tbody
                    each topic, index in topics
                        tr
                            td #{index + 1}
                            td 
                                img(src=topic.avatar alt=topic.title width="100px" height="auto")
                            td #{topic.title}
                            td 
                                if topic.status === "active"
                                    a(href="javascript:;" class="badge badge-success") Hoạt động
                                else
                                    a(href="javascript:;" class="badge badge-danger") Dừng hoạt động
                            td 
                                a(href=`/${prefixAdmin}/topics/detail/${topic.id}` class="btn btn-secondary btn-sm") Chi tiết
                                a(href=`/${prefixAdmin}/topics/edit/${topic.id}` class="btn btn-warning btn-sm ml-1") Sửa
                                button(class="btn btn-danger ml-1" button-delete data-id=topic.id) Xóa
    