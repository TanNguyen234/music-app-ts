extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main 
  .container.my-3
    .row 
      .col-12 
        +box-head(pageTitle)
    .row
      if(songs.length > 0)
       for song in songs
        .col-6.mb-3 
          .song-item 
            .inner-image
              a(href='/songs/detail/:slugSong')
                img(src=song.avatar alt=song.slug)
            .inner-content
              .inner-title
                a(href=`/songs/detail/${song.slug}`) #{song.title}
              .inner-singer <i class="fa-solid fa-microphone-lines"></i> #{song.infoSinger.fullName}
              div(class="inner-action inner-heart active" button-favorite=song.songId)
                <i class="fa-regular fa-heart"></i> Bài hát yêu thích
              .inner-time
                i(class="fa-regular fa-clock")
                if(song.updatedAt)
                  span #{song.updatedAt}
      else 
        .col-12
          .text-center
            h3 Không tìm thấy